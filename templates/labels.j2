{% if prometheus_ssh_exporter_container_labels_traefik_enabled %}
traefik.enable=true

{% if prometheus_ssh_exporter_container_labels_traefik_docker_network %}
traefik.docker.network={{ prometheus_ssh_exporter_container_labels_traefik_docker_network }}
{% endif %}

{% set middlewares = [] %}

{% if prometheus_ssh_exporter_container_labels_metrics_middleware_basic_auth_enabled %}
{% set middlewares = middlewares + [prometheus_ssh_exporter_identifier + '-basic-auth'] %}
traefik.http.middlewares.{{ prometheus_ssh_exporter_identifier }}-basic-auth.basicauth.users={{ prometheus_ssh_exporter_container_labels_metrics_middleware_basic_auth_users }}
{% endif %}

{% set middlewares = middlewares + [prometheus_ssh_exporter_identifier + '-replacepath'] %}
traefik.http.middlewares.{{ prometheus_ssh_exporter_identifier }}-replacepath.replacepath.path=/ssh

traefik.http.routers.{{ prometheus_ssh_exporter_identifier }}.rule={{ prometheus_ssh_exporter_container_labels_traefik_rule }}

traefik.http.routers.{{ prometheus_ssh_exporter_identifier }}.service={{ prometheus_ssh_exporter_identifier }}
{% if middlewares | length > 0 %}
traefik.http.routers.{{ prometheus_ssh_exporter_identifier }}.middlewares={{ middlewares | join(',') }}
{% endif %}
traefik.http.routers.{{ prometheus_ssh_exporter_identifier }}.entrypoints={{ prometheus_ssh_exporter_container_labels_traefik_entrypoints }}
traefik.http.routers.{{ prometheus_ssh_exporter_identifier }}.tls={{ prometheus_ssh_exporter_container_labels_traefik_tls | to_json }}
{% if prometheus_ssh_exporter_container_labels_traefik_tls %}
traefik.http.routers.{{ prometheus_ssh_exporter_identifier }}.tls.certResolver={{ prometheus_ssh_exporter_container_labels_traefik_tls_certResolver }}
{% endif %}

traefik.http.services.{{ prometheus_ssh_exporter_identifier }}.loadbalancer.server.port={{ prometheus_ssh_exporter_container_http_port }}
{% endif %}

{% for arg in prometheus_ssh_exporter_container_labels_additional_labels %}
{{ arg }}
{% endfor %}
